{
  "name": "@ponder/core",
  "version": "0.0.95",
  "description": "An open-source framework for crypto application backends",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xOlias/ponder",
    "directory": "packages/core"
  },
  "files": [
    "dist",
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/_test/**/*"
  ],
  "bin": {
    "ponder": "./dist/bin/ponder.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "exports": {
    "default": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "pnpm clean && tsc --project tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "build:watch": "concurrently \"tsc --project tsconfig.build.json --watch\" \"tsc-alias --project tsconfig.build.json --watch\"",
    "clean": "rimraf ./dist",
    "test": "vitest",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@babel/code-frame": "^7.18.6",
    "@jridgewell/trace-mapping": "^0.3.17",
    "abitype": "^0.8.11",
    "async-mutex": "^0.4.0",
    "better-sqlite3": "^8.7.0",
    "cac": "^6.7.14",
    "conf": "^12.0.0",
    "cors": "^2.8.5",
    "data-uri-to-buffer": "3.0.1",
    "detect-package-manager": "^2.0.1",
    "dotenv": "^16.0.1",
    "emittery": "^0.13.1",
    "ethereum-bloom-filters": "^1.0.10",
    "express": "^4.18.1",
    "glob": "^8.1.0",
    "graphql": "^16.8.1",
    "graphql-http": "^1.22.0",
    "http-terminator": "^3.2.0",
    "ink": "^3.2.0",
    "kysely": "^0.24.2",
    "p-limit": "3",
    "p-queue": "^7.4.1",
    "pg": "^8.9.0",
    "picocolors": "^1.0.0",
    "pino": "^8.14.1",
    "prom-client": "^14.2.0",
    "react": "17",
    "retry": "^0.13.1",
    "stacktrace-parser": "^0.1.10",
    "viem": "^1.2.6",
    "vite": "^4.5.0",
    "vite-node": "^0.34.6"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.3",
    "@types/better-sqlite3": "^7.6.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/glob": "^8.0.0",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.6.6",
    "@types/react": "^18.0.25",
    "@types/retry": "^0.12.2",
    "@types/supertest": "^2.0.12",
    "@viem/anvil": "^0.0.6",
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "tsc-alias": "^1.8.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
